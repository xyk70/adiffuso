[run]
branch = True
source = src
source_pkgs = albdif
relative_files = True
omit =
    **/asgi.py
    **/wsgi.py
    **/migrations/**
    **/fixtures.py
    **/.old/**
    **/tests/**

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    pragma: no-cover
    def __repr__
    pass
    if settings.DEBUG:
    if DEBUG
    if typing.TYPE_CHECKING
    if TYPE_CHECKING
    if self\.debug
    if __name__ == .__main__.:
    except JSONDecodeError
    except ValidationError
    except Exception
    raise AssertionError
    raise NotImplementedError
    except ImportError
    except BaseException as e
    raise CommandError.*
    self.halt\(.*
    @abc.abstractmethod
    @abstractmethod

fail_under=85
precision=2
ignore_errors = True

[html]
directory = ./~htmlcov/coverage
